<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--页面背景色-->
        <item name="android:windowBackground">@color/main_bg</item>
        <!--Switch开时的颜色-->
        <item name="colorAccent">@color/main_red</item>
    </style>

    <!--启动页样式-->
    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/def_splash</item>
    </style>

    <!--标题样式-->
    <style name="title_title">
        <item name="android:id">@id/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:background">@color/main_white</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="title_back">
        <item name="android:id">@id/title_back</item>
        <item name="android:layout_width">@dimen/dp_44</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:padding">@dimen/dp_12</item>
        <item name="android:src">@drawable/ic_back_arrow</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="title_text">
        <item name="android:id">@id/title_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="title_right">
        <item name="android:id">@id/title_right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="title_im">
        <item name="android:id">@id/title_im</item>
        <item name="android:layout_width">@dimen/dp_20</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_marginLeft">@dimen/dp_18</item>
        <item name="android:layout_marginRight">@dimen/dp_18</item>
        <item name="android:src">@drawable/icon_im</item>
    </style>

    <style name="title_more">
        <item name="android:id">@id/title_more</item>
        <item name="android:layout_width">@dimen/dp_20</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_marginLeft">@dimen/dp_18</item>
        <item name="android:layout_marginRight">@dimen/dp_18</item>
        <item name="android:src">@drawable/icon_more</item>
    </style>

    <style name="title_search">

        <item name="android:layout_width">@dimen/dp_44</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:padding">@dimen/dp_12</item>
        <item name="android:layout_marginLeft">@dimen/dp_6</item>
        <item name="android:layout_marginRight">@dimen/dp_6</item>
        <item name="android:src">@drawable/ic_search_white</item>
    </style>

    <style name="title_im_black" parent="title_im">
        <item name="android:src">@drawable/icon_im_black</item>
    </style>

    <style name="title_more_black" parent="title_more">
        <item name="android:src">@drawable/icon_more_black</item>
    </style>

    <!--列表 → -->
    <style name="arrow_right">
        <item name="android:layout_width">@dimen/dp_14</item>
        <item name="android:layout_height">@dimen/dp_14</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:src">@drawable/ic_goto_arrow</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="arrow_down">
        <item name="android:layout_width">@dimen/dp_14</item>
        <item name="android:layout_height">@dimen/dp_14</item>
        <item name="android:src">@drawable/icon_arrow_down</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <!--    item    40dp    -->
    <style name="item_40_group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="item_40_img">
        <item name="android:layout_width">@dimen/dp_14</item>
        <item name="android:layout_height">@dimen/dp_14</item>
        <item name="android:layout_marginRight">@dimen/dp_6</item>
        <item name="android:src">@drawable/icon_shop</item>
    </style>


    <style name="item_40_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dp_6</item>
        <item name="android:text">店铺名称</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="item_40_arrow">
        <item name="android:layout_width">@dimen/dp_14</item>
        <item name="android:layout_height">@dimen/dp_14</item>
        <item name="android:src">@drawable/ic_goto_arrow</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <!--    item    40dp    -->
    <style name="item_50_group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--文字按钮-->
    <style name="button_100">
        <item name="android:layout_width">@dimen/dp_100</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:background">@drawable/border_rect_black</item>
        <item name="android:gravity">center</item>
        <item name="android:text">删除订单</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>

    <style name="button_bottom">
        <item name="android:id">@id/commit</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:background">@drawable/bg_rect_red</item>
        <item name="android:text">提交</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="item_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:hint">请输入</item>
        <item name="android:textColorHint">@color/text_light_gray</item>
    </style>

    <style name="search_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_28</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
        <item name="android:background">@drawable/bg_search_edit</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_8</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">同城鸽海淘生活馆</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>


    <!--图标-->
    <style name="icon_15">
        <item name="android:layout_width">@dimen/dp_15</item>
        <item name="android:layout_height">@dimen/dp_15</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_4</item>
    </style>

    <style name="icon_bg_black_35">
        <item name="android:layout_width">@dimen/dp_35</item>
        <item name="android:layout_height">@dimen/dp_35</item>
