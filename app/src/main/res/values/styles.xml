<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--页面背景色-->
        <item name="android:windowBackground">@color/main_bg</item>
        <!--Switch开时的颜色-->
        <item name="colorAccent">@color/main_red</item>
    </style>

    <!--启动页样式-->
    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/def_splash</item>
    </style>

    <!--标题样式-->
    <style name="title_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:background">@color/main_white</item>
    </style>

    <style name="title_back">
        <item name="android:id">@id/title_back</item>
        <item name="android:layout_width">@dimen/dp_38</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/dp_15</item>
        <item name="android:src">@drawable/ic_back_arrow</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="title_right">
        <item name="android:id">@id/title_right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>



    <!--主按钮中号-->
    <style name="MainButtonMedium">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingTop">@dimen/top_padding_main_button_medium</item>
        <item name="android:paddingBottom">@dimen/bottom_padding_main_button_medium</item>
    </style>
    <!--主按钮小号-->
    <style name="MainButtonSmall">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:paddingTop">@dimen/top_padding_main_button_small</item>
        <item name="android:paddingBottom">@dimen/bottom_padding_main_button_small</item>
    </style>
    <!--对话框按钮中号-->
    <style name="DialogButtonMedium">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingTop">@dimen/top_padding_dialog_button_medium</item>
        <item name="android:paddingBottom">@dimen/bottom_padding_dialog_button_medium</item>
    </style>
    <!--对话框按钮小号-->
    <style name="DialogButtonSmall">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:paddingTop">@dimen/top_padding_dialog_button_small</item>
        <item name="android:paddingBottom">@dimen/bottom_padding_dialog_button_small</item>
    </style>
    <!--中号红色按钮正常-->
    <style name="MainButtonMedium.RedNormal">
        <item name="android:background">@drawable/bg_main_button_red_normal</item>
        <item name="android:textColor">@color/text_main_button_red_normal</item>
    </style>
    <!--中号红色按钮暂时不可用-->
    <style name="MainButtonMedium.RedTempDisable">
        <item name="android:background">@drawable/bg_main_button_red_normal</item>
        <item name="android:textColor">@color/text_main_button_red_temp_disable</item>
    </style>
    <!--中号红色按钮不可用-->
    <style name="MainButtonMedium.RedDisable">
        <item name="android:background">@drawable/bg_main_button_red_disable</item>
        <item name="android:textColor">@color/text_main_button_red_disable</item>
    </style>
    <!--中号红色边框按钮正常-->
    <style name="MainButtonMedium.RedBorderNormal">
        <item name="android:background">@drawable/bg_main_button_red_border_normal</item>
        <item name="android:textColor">@color/text_main_button_red_border_normal</item>
    </style>
    <!--中号红色边框按钮暂时不可用-->
    <style name="MainButtonMedium.RedBorderTempDisable">
        <item name="android:background">@drawable/bg_main_button_red_border_normal</item>
        <item name="android:textColor">@color/text_main_button_red_border_temp_disable</item>
    </style>
    <!--中号红色边框按钮不可用-->
    <style name="MainButtonMedium.RedBorderDisable">
        <item name="android:background">@drawable/bg_main_button_red_border_disable</item>
        <item name="android:textColor">@color/text_main_button_red_border_disable</item>
    </style>
    <!--小号红色边框按钮正常-->
    <style name="MainButtonSmall.RedBorderNormal">
        <item name="android:background">@drawable/bg_main_button_red_border_normal</item>
        <item name="android:textColor">@color/text_main_button_red_border_normal</item>
    </style>
    <!--小号红色边框按钮不可用-->
    <style name="MainButtonSmall.RedBorderDisable">
        <item name="android:background">@drawable/bg_main_button_red_border_disable</item>
        <item name="android:textColor">@color/text_main_button_red_border_disable</item>
    </style>
    <!--小号黑色边框按钮正常-->
    <style name="MainButtonSmall.BlackBorderNormal">
        <item name="android:background">@drawable/bg_main_button_black_border_normal</item>
        <item name="android:textColor">@color/text_main_button_black_border_normal</item>
    </style>
    <!--小号黑色边框按钮不可用-->
    <style name="MainButtonSmall.BlackBorderDisable">
        <item name="android:background">@drawable/bg_main_button_black_border_disable</item>
        <item name="android:textColor">@color/text_main_button_black_border_disable</item>
    </style>
    <!--中号积极对话框按钮-->
    <style name="DialogButtonMedium.Positive">
        <item name="android:background">@drawable/bg_dialog_button_positive</item>
        <item name="android:textColor">@color/text_dialog_button_positive</item>
    </style>
    <!--小号积极对话框按钮-->
    <style name="DialogButtonSmall.Positive">
        <item name="android:background">@drawable/bg_dialog_button_positive</item>
        <item name="android:textColor">@color/text_dialog_button_positive</item>
    </style>
    <!--中号消极对话框按钮-->
    <style name="DialogButtonMedium.Negative">
        <item name="android:background">@drawable/bg_dialog_button_negative</item>
        <item name="android:textColor">@color/text_dialog_button_negative</item>
    </style>
    <!--小号消极对话框按钮-->
    <style name="DialogButtonSmall.Negative">
        <item name="android:background">@drawable/bg_dialog_button_negative</item>
        <item name="android:textColor">@color/text_dialog_button_negative</item>
    </style>
</resources>
