<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.balance.activity.WithdrawSucceedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/main_white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/medium"
            android:paddingRight="@dimen/small"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提现详情"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_large" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:layout_alignParentBottom="true"
            android:background="@color/div_dark" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white">

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:drawablePadding="@dimen/small"
            android:drawableTop="@drawable/ic_withdraw_succeed"
            android:gravity="center_horizontal"
            android:text="提现申请已提交"
            android:textColor="#3492e9"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tv_withdraw_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hint"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="@dimen/large"
            android:textColor="@color/text_black"
            android:textSize="34dp"
            tools:text="50.00元" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:layout_below="@+id/tv_withdraw_money"
            android:background="@color/div_light" />

        <TextView
            android:id="@+id/tv_pay_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_withdraw_money"
            android:layout_marginLeft="@dimen/small"
            android:layout_marginTop="@dimen/medium"
            android:text="付款信息"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_pay_info_text"
            android:layout_marginLeft="@dimen/large"
            android:layout_toRightOf="@+id/tv_pay_info_text"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small"
            tools:text="工商银行储蓄卡(2728)" />

        <TextView
            android:id="@+id/tv_play_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_bank"
            android:layout_below="@+id/tv_bank"
            android:layout_marginBottom="@dimen/medium"
            android:layout_marginTop="@dimen/small"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small"
            tools:text="+550.15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_finish"
        style="@style/MainButtonMedium.RedNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small"
        android:layout_marginRight="@dimen/small"
        android:layout_marginTop="@dimen/large"
        android:text="完成" />
</LinearLayout>