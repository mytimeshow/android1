<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.czyugang.tcg.client.widget.SelectButton
        android:id="@+id/item_select_address_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/item_select_address_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_toRightOf="@+id/item_select_address_select"
        android:text="广东省潮州市湘桥区黄北路七胶村杜奔头斜对面"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_14"
        />

    <TextView
        android:id="@+id/item_select_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_select_address_location"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_toRightOf="@+id/item_select_address_select"
        android:text="Awai  13690000000"
        android:textColor="@color/text_dark_gray"
        android:textSize="@dimen/sp_16"
        />

    <ImageView
        android:id="@+id/item_select_address_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_select_address_location"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@+id/item_select_address_name"
        android:background="@drawable/bg_rect_red"
        android:src="@drawable/tag_default"
        />

    <ImageView
        android:id="@+id/item_select_address_disable"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_42"
        android:src="@drawable/tag_out_delivery"
        />

    <ImageView
        android:id="@+id/item_select_address_edit"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_11"
        android:src="@drawable/ic_address_edit"
        />
</RelativeLayout>