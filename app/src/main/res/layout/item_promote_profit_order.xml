<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.czyugang.tcg.client.utils.img.ImgView
        android:id="@+id/item_img"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/item_name"
        style="@style/text_16_black"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@id/item_img"
        android:text="好吃美味500可海鲜零食休闲食"/>

    <TextView
        android:id="@+id/item_name_sub"
        style="@style/text_12_gray"
        android:layout_alignLeft="@id/item_name"
        android:layout_below="@id/item_name"
        android:layout_marginTop="@dimen/dp_8"
        android:text="所属店铺： 宇哥家的杂货铺"/>

    <TextView
        android:id="@+id/item_status"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_14"
        android:layout_alignBottom="@id/item_img"
        android:layout_toRightOf="@id/item_img"
        android:background="@drawable/border_rect_red"
        android:gravity="center"
        android:text="待结算"
        android:textColor="@color/main_red"
        android:textSize="@dimen/sp_10"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignLeft="@id/item_name"
        android:layout_below="@id/item_status"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_status"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_toRightOf="@id/item_img"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:lineSpacingMultiplier="1.2"
                android:text="付款金额"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_12"
                />
            <TextView
                android:id="@+id/item_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:lineSpacingMultiplier="1.2"
                android:text="￥15"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:lineSpacingMultiplier="1.2"
                android:text="成交预估收入"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_12"
                />
            <TextView
                android:id="@+id/item_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:lineSpacingMultiplier="1.2"
                android:text="￥15"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:lineSpacingMultiplier="1.2"
                android:text="提成"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_12"
                />
            <TextView
                android:id="@+id/item_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:lineSpacingMultiplier="1.2"
                android:text="25.60%"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_name"
        android:layout_below="@id/item_status"
        android:layout_marginTop="@dimen/dp_62"
        android:text="134***222 于2017-09-21 22:34:48 创建"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_10"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_below="@id/item_time"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@color/bg"
        />

    <ImageView
        android:id="@+id/item_type"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:src="@drawable/tag_invite_register"
        />

</RelativeLayout>