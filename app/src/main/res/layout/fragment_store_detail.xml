<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/store_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_11"
            android:background="@color/main_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/store_detail_deliver_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ 20"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_20"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="起送价"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_12"
                    />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0.5"
                android:layout_height="@dimen/dp_60"
                android:background="@color/main_bg"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/store_detail_deliver_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ 5"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_20"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="配送费"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_12"
                    />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0.5"
                android:layout_height="@dimen/dp_60"
                android:background="@color/main_bg"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/store_detail_deliver_time_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 min"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_20"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="送达时长"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_12"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_11"
            android:background="@color/main_bg"/>

        <!--手机-->
        <LinearLayout
            android:id="@+id/store_detail_phoneL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/icon_phone"/>

            <TextView
                android:id="@+id/store_detail_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345678901"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/ic_goto_arrow"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/main_bg"/>
        <!--地址-->
        <LinearLayout
            android:id="@+id/store_detail_addressL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/ic_address_location"/>

            <TextView
                android:id="@+id/store_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345678901"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/ic_goto_arrow"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/main_bg"/>
        <!--营业时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/icon_time"/>

            <TextView
                android:id="@+id/store_detail_open_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345678901"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_11"
            android:background="@color/main_bg"/>
        <!--配送时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/icon_deliver_time"/>

            <TextView
                android:id="@+id/store_detail_deliver_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345678901"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/main_bg"/>
        <!--配送服务-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_50"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/icon_service"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="配送服务："
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                />

            <TextView
                android:id="@+id/store_detail_deliver_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:lineSpacingMultiplier="1.4"
                android:text="服务时间\n服务时间"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_11"
            android:background="@color/main_bg"/>
        <!--优惠-->
        <LinearLayout
            android:id="@+id/store_detail_activities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal">

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_11"
            android:background="@color/main_bg"/>
        <!--店铺环境-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="店铺环境"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/main_bg"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/store_detail_environment_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:layout_margin="@dimen/dp_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_11"
            android:background="@color/main_bg"/>
        <!--店家信息-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="商家信息"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/main_bg"/>

        <!--商家名称-->
        <TextView
            android:id="@+id/store_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="商家名称："
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/sp_14"/>

        <!--其他店铺-->
        <TextView
            android:id="@+id/store_detail_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="其他店铺："
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/sp_14"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/store_detail_other_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_11"
            android:background="@color/main_bg"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
