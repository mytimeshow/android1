<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:orientation="vertical">

    <cn.czyugang.tcg.client.utils.img.ImgView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_176"
        android:layout_marginBottom="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="巨无霸"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_14"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/item_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已售11份"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="标签"
            android:textColor="@color/main_orange"
            android:textSize="@dimen/sp_10"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥9.99"
            android:textColor="@color/main_red"
            android:textSize="@dimen/sp_18"
            />

        <include layout="@layout/space_h"/>

        <ImageView
            android:id="@+id/item_minus"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ic_minus_grey_black"
            />

        <TextView
            android:id="@+id/item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:text="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"/>

        <ImageView
            android:id="@+id/item_plus"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ic_plus_red"
            />

    </LinearLayout>

</LinearLayout>