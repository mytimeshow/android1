<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/view_plus_minusL"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/border_rect_grey"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <FrameLayout
            android:id="@+id/view_minus"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_11"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_11"

            >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_350"/>

        </FrameLayout>

        <View
            android:id="@+id/view_minus_bar"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/grey_350"
            />

        <TextView
            android:id="@+id/view_num"
            style="@style/text_14_black"
            android:gravity="center"
            android:minWidth="@dimen/dp_32"
            android:text="0"
            />

        <View
            android:id="@+id/view_num_bar"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/grey_350"
            />

        <ImageView
            android:id="@+id/view_plus"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:padding="@dimen/dp_8"
            android:src="@drawable/icon_add"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/view_multi_specL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_3"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/view_multi_spec"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/border_rect_grey"
            android:padding="@dimen/dp_7"
            android:src="@drawable/icon_add"
            />

        <TextView
            android:id="@+id/view_multi_spec_num"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="right"
            android:background="@drawable/dot_red"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            />
    </FrameLayout>

</FrameLayout>