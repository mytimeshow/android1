<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        style="@style/title_title">

        <ImageView
            style="@style/title_back"/>

        <TextView
            style="@style/title_text"
            android:text="报表"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:background="@color/main_red"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/promote_profit_this_month"
            style="@style/text_14_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_14"
            android:text="本月结算预估收入\n￥9.09"
            android:lineSpacingMultiplier="1.4"
            />

        <View
            android:layout_width="@dimen/dp_0.5"
            android:layout_height="@dimen/dp_33"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/promote_profit_last_month"
            style="@style/text_14_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_14"
            android:text="上月结算预估收入\n￥9.09"
            android:lineSpacingMultiplier="1.4"
            />

    </LinearLayout>

    <include layout="@layout/view_split_bar_light_big"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/promote_profit_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <android.support.v4.view.ViewPager
        android:id="@+id/promote_profit_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/promote_profit_tab_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <include layout="@layout/view_split_bar_light"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/promote_profit_viewpager_down"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>