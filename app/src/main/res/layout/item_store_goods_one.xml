<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_15"
    android:orientation="horizontal">

    <cn.czyugang.tcg.client.utils.img.ImgView
        android:id="@+id/item_img"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_130"
        android:layout_marginRight="@dimen/dp_10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巨无霸"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            />

        <TextView
            android:id="@+id/item_name_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="1个巨无霸"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/dp_12"
            />

        <TextView
            android:id="@+id/item_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:text="已售11份  评价22"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:text="标签"
            android:textColor="@color/main_orange"
            android:textSize="@dimen/sp_10"
            />

        <include layout="@layout/space_v"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥9.99"
                android:textColor="@color/main_red"
                android:textSize="@dimen/sp_18"
                />

            <include layout="@layout/space_h"/>

            <cn.czyugang.tcg.client.widget.GoodsPlusMinusView
                android:id="@+id/item_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>