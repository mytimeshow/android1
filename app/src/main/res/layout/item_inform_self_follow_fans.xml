<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90"
    android:layout_marginBottom="@dimen/dp_0.5"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15"
    android:background="@color/white"
    android:orientation="horizontal">
    <cn.czyugang.tcg.client.utils.img.ImgView
        android:id="@+id/inform_self_follow_fans_img"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@drawable/logo"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_weight="100"
        >
        <TextView
            android:id="@+id/inform_self_follow_fans_name"
            style="@style/text_14_dark_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小城百事通"/>
        <LinearLayout
            android:id="@+id/inform_self_follow_fans_bottom"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_below="@+id/inform_self_follow_fans_name">

            <TextView
                android:id="@+id/inform_self_follow_fans_follownum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="452455"
                android:textColor="@color/main_red"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 人关注"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>




    </RelativeLayout>
    
    <TextView
        android:id="@+id/inform_self_follow_fans_isfollow"
        android:layout_weight="1"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_20"
        android:background="@drawable/bg_rect_cir_red"
        android:text="+关注"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_gravity="center"/>


</LinearLayout>
