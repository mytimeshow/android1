<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <include layout="@layout/space_h"/>

        <FrameLayout
            android:id="@+id/home_errand_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/icon_errand_buy"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                style="@style/text_12_black"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_gravity="center_horizontal"
                android:text="帮我买"
                />

        </FrameLayout>

        <include layout="@layout/space_h"/>

        <FrameLayout
            android:id="@+id/home_errand_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/icon_errand_send"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                style="@style/text_12_black"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_gravity="center_horizontal"
                android:text="帮我送"
                />

        </FrameLayout>

        <include layout="@layout/space_h"/>

        <FrameLayout
            android:id="@+id/home_errand_take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/icon_errand_take"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                style="@style/text_12_black"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_gravity="center_horizontal"
                android:text="帮我取"
                />

        </FrameLayout>
        <include layout="@layout/space_h"/>
    </LinearLayout>

</LinearLayout>