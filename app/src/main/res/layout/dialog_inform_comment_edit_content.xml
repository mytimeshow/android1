<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_55"
    android:background="@color/white"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/inform_send_comment"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_35"
        android:gravity="center"
        android:background="@drawable/bg_rect_dark_grey"
        android:layout_alignParentRight="true"
        style="@style/text_16_white"
        android:text="发送"/>
    <EditText
        android:id="@+id/inform_comment_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:layout_alignTop="@+id/inform_send_comment"
        android:layout_alignBottom="@+id/inform_send_comment"
        android:layout_toLeftOf="@+id/inform_send_comment"
        android:background="@drawable/bg_rect_dark_f5"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_black"
        android:hint="好想说点什么？"
        android:textColorHint="@color/text_gray"/>
</RelativeLayout>