<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/small"
    tools:context=".modules.login.fragment.AccountLoginFragment">

    <EditText
        android:id="@+id/et_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:hint="请输入帐号/手机号"
        android:inputType="text"
        android:lines="1"
        android:maxLength="@integer/account_length"
        android:padding="@dimen/small"
        android:textColor="@color/text_black"
        android:textColorHint="#bbb"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/text_medium" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small"
        android:background="#eee"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="@integer/password_length"
        android:padding="@dimen/small"
        android:textColor="@color/text_black"
        android:textColorHint="#bbb"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/tv_login"
        style="@style/MainButtonMedium.RedNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large"
        android:text="登录" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large"
        android:gravity="center_horizontal"
        android:text="登录代表你已同意《同城鸽用户协议》"
        android:textColor="@color/text_dark_gray"
        android:textSize="@dimen/text_very_small" />
</LinearLayout>