<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_110"
            >

            <View
                android:id="@+id/store_info_title_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:background="@color/bg_store_food"/>

            <ImageView
                android:id="@+id/title_back"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:padding="@dimen/dp_12"
                android:src="@drawable/ic_arrow_left_white"
                />

            <cn.czyugang.tcg.client.utils.img.ImgView
                android:id="@+id/store_info_img"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"/>

        </FrameLayout>

        <TextView
            android:id="@+id/store_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:text="百年老店"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"/>

        <cn.czyugang.tcg.client.widget.FiveStarView
            android:id="@+id/store_info_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:five_star_score="4"
            />

        <TextView
            android:id="@+id/store_info_delivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:text="平台配送|32分钟送达| 起送￥20 配送费￥3
\n配送时间： 10：50-14：00，16：50-20：00
\n店铺标签：百年老店、同城鸽推荐店"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:text="优惠信息"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_18"/>

        <LinearLayout
            android:id="@+id/store_info_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="vertical"
            >

            <cn.czyugang.tcg.client.widget.ActivityTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:activity_text="满20减8"
                app:activity_type="减"
                />

            <cn.czyugang.tcg.client.widget.ActivityTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:activity_text="满20减8"
                app:activity_type="减"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:text="商家公告"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_18"/>

        <TextView
            android:id="@+id/store_info_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15"
            android:lineSpacingMultiplier="1.5"
            android:text="公告公告公告公告公告"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/sp_12"/>

    </LinearLayout>


</ScrollView>