<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10">
        
        <cn.czyugang.tcg.client.utils.img.ImgView
            android:id="@+id/inform_details_comment_head"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_logout_avatar"/>
        <TextView
            android:id="@+id/inform_details_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_alignTop="@+id/inform_details_comment_head"
            android:layout_alignBottom="@+id/inform_details_comment_head"
            android:layout_toRightOf="@+id/inform_details_comment_head"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_dark_gray"
            android:gravity="center"
            android:text="这是我的名"/>
        <TextView
            android:id="@+id/inform_details_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignTop="@+id/inform_details_comment_head"
            android:layout_alignBottom="@+id/inform_details_comment_head"
            android:layout_toRightOf="@+id/inform_details_comment_name"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_light_gray"
            android:gravity="center"
            android:text="4天前"/>
        <ImageView
            android:id="@+id/inform_details_comment_thumbs"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignTop="@+id/inform_details_comment_head"
            android:layout_alignBottom="@+id/inform_details_comment_head"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_thumb_up"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/inform_details_comment_thumbs_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_alignTop="@+id/inform_details_comment_head"
            android:layout_alignBottom="@+id/inform_details_comment_head"
            android:layout_toLeftOf="@+id/inform_details_comment_thumbs"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:text="225436"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/grey_350"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="hhhhhhhhhhhhhhhhhhhhhh
        hhhhhhhhhhhhhhhhhhh
        hhhhhhhhhhhh"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/text_gray"
        android:lineSpacingExtra="@dimen/dp_5"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
