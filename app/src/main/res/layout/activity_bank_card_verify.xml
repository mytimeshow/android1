<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.balance.activity.BankCardVerifyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/main_white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/medium"
            android:paddingRight="@dimen/small"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="验证银行卡信息"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_large" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:layout_alignParentBottom="true"
            android:background="@color/div_dark" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small"
        android:layout_marginLeft="@dimen/medium"
        android:layout_marginTop="@dimen/large"
        android:text="请绑定账户本人的银行卡"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/medium"
        android:paddingTop="@dimen/medium">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small"
            android:text="银行卡"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/text_small"
            tools:text="中国工商银行储蓄卡" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/div_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/medium"
        android:paddingTop="@dimen/medium">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small"
            android:text="卡号"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tv_bank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/text_small"
            tools:text="6222023602055112728" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium"
        android:layout_marginLeft="@dimen/small"
        android:layout_marginTop="@dimen/medium"
        android:drawableLeft="@drawable/ic_hint_info"
        android:drawablePadding="@dimen/very_small"
        android:text="信息加密处理，保障个人隐私不泄漏"
        android:textColor="@color/text_dark_gray"
        android:textSize="@dimen/text_very_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small"
            android:text="姓名"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="持卡人姓名"
            android:inputType="text"
            android:lines="1"
            android:paddingBottom="@dimen/medium"
            android:paddingLeft="@dimen/medium"
            android:paddingRight="@dimen/small"
            android:paddingTop="@dimen/medium"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_light_gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/div_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small"
            android:text="身份证"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small" />

        <EditText
            android:id="@+id/et_id_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="15或18位身份证号码"
            android:inputType="number"
            android:lines="1"
            android:maxLength="@integer/id_card_length"
            android:paddingBottom="@dimen/medium"
            android:paddingLeft="@dimen/medium"
            android:paddingRight="@dimen/small"
            android:paddingTop="@dimen/medium"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_light_gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/div_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small"
            android:text="手机号"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small" />

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="银行预留手机号"
            android:inputType="number"
            android:lines="1"
            android:maxLength="@integer/mobile_length"
            android:paddingBottom="@dimen/medium"
            android:paddingLeft="@dimen/medium"
            android:paddingTop="@dimen/medium"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_light_gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_small" />

        <ImageView
            android:id="@+id/iv_verify_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium"
            android:src="@drawable/ic_bank_card_verify_explain" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_user_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium"
        android:layout_marginTop="@dimen/small"
        android:background="@null"
        android:button="@null"
        android:checked="true"
        android:drawableLeft="@drawable/selector_main_checkbox"
        android:drawablePadding="@dimen/very_small"
        android:text="我已阅读并同意《同城鸽用户协议》"
        android:textColor="@color/text_dark_gray"
        android:textSize="@dimen/text_very_small" />

    <TextView
        android:id="@+id/tv_verify"
        style="@style/MainButtonMedium.RedNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small"
        android:layout_marginRight="@dimen/small"
        android:layout_marginTop="@dimen/large"
        android:text="验证信息" />
</LinearLayout>