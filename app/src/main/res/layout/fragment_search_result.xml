<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_6"
    >

    <include layout="@layout/view_split_bar_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_type"
            style="@style/text_14_black"
            android:drawablePadding="@dimen/dp_4"
            android:drawableRight="@drawable/tri_down_gray"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:text="全部"
            />

        <View
            android:layout_width="@dimen/dp_0.5"
            android:layout_height="@dimen/dp_20"
            android:background="@color/bg"/>

        <TextView
            android:id="@+id/search_order_price"
            style="@style/text_14_black"
            android:layout_marginLeft="@dimen/dp_14"
            android:drawablePadding="@dimen/dp_4"
            android:drawableRight="@drawable/tri_down_red"
            android:text="距离最近"
            android:textColor="@color/main_red"
            />

        <include layout="@layout/space_h"/>

        <TextView
            android:id="@+id/search_order_sale"
            style="@style/text_14_dark_gray"
            android:padding="@dimen/dp_8"
            android:text="销量"
            />

        <include layout="@layout/space_h"/>

        <ImageView
            android:id="@+id/search_show_type"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:src="@drawable/icon_list_two"
            />

        <View
            android:layout_width="@dimen/dp_0.5"
            android:layout_height="@dimen/dp_20"
            android:background="@color/bg"/>

        <TextView
            android:id="@+id/search_filter"
            style="@style/text_14_dark_gray"
            android:drawablePadding="@dimen/dp_4"
            android:drawableRight="@drawable/icon_screen"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:text="筛选"
            />
    </LinearLayout>

    <include layout="@layout/view_split_bar_light"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--商品/店铺-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <!--类型-->
        <LinearLayout
            android:id="@+id/search_typeL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_blur"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@+id/search_type_all"
                style="@style/item_40_group">

                <TextView
                    android:id="@+id/search_type_all_text"
                    style="@style/text_14_dark_gray"
                    android:text="全部"
                    />

                <include layout="@layout/space_h"/>

                <ImageView
                    android:id="@+id/search_type_all_select"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_type_food"
                style="@style/item_40_group">

                <TextView
                    android:id="@+id/search_type_food_text"
                    style="@style/text_14_dark_gray"
                    android:text="外卖"
                    />

                <include layout="@layout/space_h"/>

                <ImageView
                    android:id="@+id/search_type_food_select"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_type_goods"
                style="@style/item_40_group">

                <TextView
                    android:id="@+id/search_type_goods_text"
                    style="@style/text_14_dark_gray"
                    android:text="商超"
                    />

                <include layout="@layout/space_h"/>

                <ImageView
                    android:id="@+id/search_type_goods_select"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    />
            </LinearLayout>

        </LinearLayout>

        <!--排序-->
        <LinearLayout
            android:id="@+id/search_orderL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_blur"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@+id/search_order_distance"
                style="@style/item_40_group">

                <TextView
                    android:id="@+id/search_order_distance_text"
                    style="@style/text_14_dark_gray"
                    android:text="距离最近"
                    />

                <include layout="@layout/space_h"/>

                <ImageView
                    android:id="@+id/search_order_distance_select"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_order_praise"
                style="@style/item_40_group">

                <TextView
                    android:id="@+id/search_order_praise_text"
                    style="@style/text_14_dark_gray"
                    android:text="好评"
                    />

                <include layout="@layout/space_h"/>

                <ImageView
                    android:id="@+id/search_order_praise_select"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_order_price_up"
                style="@style/item_40_group">

                <TextView
                    android:id="@+id/search_order_price_up_text"
                    style="@style/text_14_dark_gray"
                    android:text="价格从低至高"
                    />

                <include layout="@layout/space_h"/>

                <ImageView
                    android:id="@+id/search_order_price_up_select"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_order_price_down"
                style="@style/item_40_group">

                <TextView
                    android:id="@+id/search_order_price_down_text"
                    style="@style/text_14_dark_gray"
                    android:text="价格从高至低"
                    />

                <include layout="@layout/space_h"/>

                <ImageView
                    android:id="@+id/search_order_price_down_select"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    />
            </LinearLayout>
        </LinearLayout>

        <!--筛选-->
        <FrameLayout
            android:id="@+id/search_filterL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_blur"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_70"
                android:background="@color/bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="筛选"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp_14"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--价格区间（元）-->
                    <TextView
                        style="@style/text_14_dark_gray"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="价格区间（元）"/>

                    <LinearLayout
                        style="@style/item_40_group"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:background="@color/bg"
                        android:paddingBottom="@dimen/dp_6"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_6">

                        <EditText
                            android:id="@+id/filter_price_min"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_rect_white"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:hint="最低价"
                            android:textColorHint="@color/text_light_gray"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="@dimen/sp_14"
                            />

                        <View
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_2"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:background="@color/text_gray"
                            />

                        <EditText
                            android:id="@+id/filter_price_max"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_rect_white"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:hint="最高价"
                            android:textColorHint="@color/text_light_gray"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="@dimen/sp_14"
                            />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/filter_label_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_70"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/filter_reset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/main_light_red"
                    android:gravity="center"
                    android:text="重置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    />

                <TextView
                    android:id="@+id/filter_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/main_red"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    />
            </LinearLayout>
        </FrameLayout>


    </FrameLayout>

</LinearLayout>