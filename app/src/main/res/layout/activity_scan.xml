<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/scan_scaner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageView
        android:id="@+id/scan_back"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/dot_black"
        android:padding="@dimen/dp_8"
        android:src="@drawable/ic_back_gray"
        />

    <ImageView
        android:id="@+id/scan_history"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_112"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/dot_black"
        android:padding="@dimen/dp_8"
        android:src="@drawable/icon_clock_gray"
        />

    <ImageView
        android:id="@+id/scan_gallery"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_64"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/dot_black"
        android:padding="@dimen/dp_8"
        android:src="@drawable/icon_gallery"
        />

    <ImageView
        android:id="@+id/scan_flash"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/dot_black"
        android:padding="@dimen/dp_8"
        android:src="@drawable/icon_light"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_80"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_dbarcode_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:text="将条码/二维码放入框内"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_qrcode_gray"/>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/scan_input_code"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_420"
        android:background="@drawable/bg_rect_grey_222"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/icon_dbarcode_gray"
            android:drawablePadding="@dimen/dp_10"
            android:text="输入条码"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            />
    </FrameLayout>

</FrameLayout>