<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_210">

        <cn.czyugang.tcg.client.utils.img.ImgView
            android:id="@+id/myself_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/score_bg_red"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
        <FrameLayout
            style="@style/title_title"
            android:layout_height="@dimen/dp_45"
            android:background="@color/transparent">
            <ImageView
                style="@style/title_back"
                android:src="@drawable/ic_back_white"/>

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/ic_search_white"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/dp_10"/>
        </FrameLayout>
    </RelativeLayout>
    <cn.czyugang.tcg.client.utils.img.ImgView
        android:id="@+id/myself_head"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_65"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logout_avatar"
         />

    <TextView
        android:id="@+id/myself_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/myself_head"
        style="@style/text_14_white"
        android:text="翻滚的泡芙"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/myself_name"
        style="@style/text_12_dark_gray"
        android:textColor="@color/white"
        android:lines="1"
        android:text="反反复复付付付付付付付付付付付付付付付付反反复复..."/>

    <LinearLayout
        android:id="@+id/dataLinear"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/dp_178"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_rect_white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/text_gray"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="9899"
                style="@style/text_14_dark_gray"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/text_gray"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="9899"
                style="@style/text_14_dark_gray"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="文章"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/text_gray"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="9899"
                style="@style/text_14_dark_gray"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/inform_for_myself_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/dataLinear">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
