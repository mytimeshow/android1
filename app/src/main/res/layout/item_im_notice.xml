<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_time"
        style="@style/text_12_gray"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/bg"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:text="2017/10/24  16:00"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <View
            android:id="@+id/item_dot"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/dot_red"/>

        <TextView
            android:id="@+id/item_title"
            style="@style/text_16_black"
            android:text="消息标题标题标题题题题题题"
            />

        <include layout="@layout/space_h"/>

        <ImageView
            android:id="@+id/item_delete"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_clear"
            />
    </LinearLayout>

    <cn.czyugang.tcg.client.utils.img.ImgView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_148"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>

    <TextView
        android:id="@+id/item_title_sub"
        style="@style/text_12_dark_gray"
        android:layout_marginBottom="@dimen/dp_10"
        android:lineSpacingMultiplier="1.3"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="消息副标题副标题附表副标题副标题附表副标题副标题副标题副标题副标题副标题副标题副标题副标题副标题副标题副标题副标题副标题副标提..."/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/bg"
        />

    <TextView
        android:id="@+id/item_category"
        style="@style/text_12_dark_gray"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:text="消息分类名称"/>

    <include layout="@layout/view_split_bar_light_big"/>
</LinearLayout>
