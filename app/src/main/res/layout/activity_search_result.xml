<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    >

    <LinearLayout
        style="@style/title_title">

        <ImageView
            style="@style/title_back"/>

        <EditText
            android:id="@+id/title_input"
            style="@style/search_edit"
            android:layout_width="0dp"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            android:layout_weight="1"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            />

        <ImageView
            style="@style/title_more_black"
            />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/search_result_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <cn.czyugang.tcg.client.widget.NoScrollViewPager
        android:id="@+id/search_result_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>