<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <cn.czyugang.tcg.client.utils.img.ImgView
        android:id="@+id/item_img"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/item_name"
        style="@style/text_16_black"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_toRightOf="@id/item_img"
        android:text="香可口好吃美味500可海500可海"
        />

    <TextView
        android:id="@+id/item_multi_spec"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/border_rect_red"
        android:gravity="center"
        android:text="多规格"
        android:textColor="@color/main_light_red"
        android:textSize="@dimen/sp_10"/>

    <TextView
        android:id="@+id/item_name_sub"
        style="@style/text_12_gray"
        android:layout_alignLeft="@id/item_name"
        android:layout_below="@id/item_name"
        android:layout_marginTop="@dimen/dp_8"
        android:text="副标题副标题附表附表副标题附表副标题附表副标..."
        />

    <cn.czyugang.tcg.client.widget.ProgressBgView
        android:id="@+id/item_progress"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_13"
        android:layout_alignLeft="@id/item_name"
        android:layout_below="@id/item_name_sub"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center"
        android:text="50%"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        />

    <TextView
        android:id="@+id/item_sale"
        style="@style/text_12_gray"
        android:layout_alignBottom="@id/item_progress"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@id/item_progress"
        android:text="已抢 0 件"
        android:textColor="@color/main_red"/>

    <TextView
        android:id="@+id/item_price"
        style="@style/text_14_black"
        android:layout_alignLeft="@id/item_name"
        android:layout_below="@id/item_progress"
        android:layout_marginTop="@dimen/dp_12"
        android:text="￥0.00"
        android:textColor="@color/main_red"/>

    <TextView
        android:id="@+id/item_limit"
        style="@style/text_12_gray"
        android:layout_alignLeft="@id/item_name"
        android:layout_below="@id/item_price"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:text="每人限购0件"
        android:textColor="@color/main_light_blue"
        />

    <cn.czyugang.tcg.client.widget.LabelLayout
        android:id="@+id/item_labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_name"
        android:layout_below="@id/item_price"
        android:layout_marginTop="@dimen/dp_16"
        />

    <cn.czyugang.tcg.client.widget.GoodsPlusMinusView
        android:id="@+id/item_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@id/item_progress"
        android:layout_marginTop="@dimen/dp_12"
        />

    <include layout="@layout/view_split_bar_light"/>

</RelativeLayout>