<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_2"
    >

    <FrameLayout
        android:id="@+id/item_imgL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_176">

        <cn.czyugang.tcg.client.utils.img.ImgView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_176"
            />

        <TextView
            android:id="@+id/item_multi_spec"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_17"
            android:layout_gravity="right"
            android:background="@drawable/bg_rect_red"
            android:gravity="center"
            android:text="多规格"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/scan_good_img_bg"
            android:layout_gravity="bottom"
            />

        <cn.czyugang.tcg.client.widget.ProgressBgView
            android:id="@+id/item_progress"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_13"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:gravity="center"
            android:text="50%"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            />

        <TextView
            android:id="@+id/item_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_4"
            android:text="已抢40件"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/item_name"
        style="@style/text_14_black"
        android:layout_below="@id/item_imgL"
        android:layout_marginTop="@dimen/dp_8"
        android:text="商品名称称称6称称称称称"/>

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:layout_marginTop="@dimen/dp_8"
        android:text="￥99.99"
        android:textColor="@color/main_red"
        android:textSize="@dimen/sp_18"
        />

    <TextView
        android:id="@+id/item_limit"
        style="@style/text_12_gray"
        android:layout_below="@id/item_price"
        android:layout_marginTop="@dimen/dp_8"
        android:text="每人限购2件"
        android:textColor="@color/main_light_blue"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_price"
        android:layout_marginRight="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/border_rect_grey"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <View
            android:id="@+id/item_minus"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_7"
            android:background="@color/grey_350"
            android:visibility="gone"
            />

        <View
            android:id="@+id/item_minus_bar"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/grey_350"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/item_num"
            style="@style/text_14_black"
            android:gravity="center"
            android:minWidth="@dimen/dp_23"
            android:text="0"
            android:visibility="gone"
            />

        <View
            android:id="@+id/item_num_bar"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/grey_350"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/item_plus"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:padding="@dimen/dp_7"
            android:src="@drawable/icon_add"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/item_dot_num"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_price"
        android:background="@drawable/dot_red"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        />

</RelativeLayout>