<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_106"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_weight="2">
        <cn.czyugang.tcg.client.utils.img.ImgView
            android:id="@+id/follow_list_head"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"/>
        <TextView
            android:id="@+id/follow_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:layout_alignTop="@id/follow_list_head"
            android:layout_alignBottom="@id/follow_list_head"
            android:layout_toRightOf="@id/follow_list_head"
            android:text="博主名称"/>
        <LinearLayout
            android:id="@+id/follw_list_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true" >
            <TextView

                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_gravity="center"
                android:background="@drawable/ic_comment"
                />
            <TextView
                android:id="@+id/follw_list_commit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_12"

                android:text="215"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/follw_list_thumb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_60"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
        <TextView

            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="center"
            android:background="@drawable/ic_thumb_up"
            />
        <TextView
            android:id="@+id/follw_list_thumb_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_12"

            android:text="215"/>
        </LinearLayout>

        <TextView
            android:id="@+id/follow_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/follw_list_commit"
            android:layout_below="@id/follow_list_head"
            style="@style/text_14_dark_gray"
            android:lines="2"
            android:lineSpacingExtra="@dimen/dp_3"
            android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"/>

    </RelativeLayout>

    <cn.czyugang.tcg.client.utils.img.ImgView
        android:id="@+id/follow_list_img"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_90"
        android:layout_gravity="center"/>


</LinearLayout>
