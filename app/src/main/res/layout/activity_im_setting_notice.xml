<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        style="@style/title_title">

        <ImageView
            style="@style/title_text"/>

        <TextView
            style="@style/title_text"
            android:text="消息免打扰"/>
    </FrameLayout>

    <include layout="@layout/view_split_bar_light"/>

    <LinearLayout
        android:id="@+id/im_setting_notice_nightL"
        style="@style/item_50_group">

        <TextView
            style="@style/text_14_black"
            android:text="只在夜间开启"/>

        <include layout="@layout/space_h"/>

        <ImageView
            android:id="@+id/im_setting_notice_night"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_select_hook_red"/>
    </LinearLayout>

    <include layout="@layout/view_split_bar_light_margin"/>

    <LinearLayout
        android:id="@+id/im_setting_notice_closeL"
        style="@style/item_50_group">

        <TextView
            style="@style/text_14_black"
            android:text="关闭"/>

        <include layout="@layout/space_h"/>

        <ImageView
            android:id="@+id/im_setting_notice_close"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_select_hook_red"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        style="@style/text_12_gray"
        android:layout_margin="@dimen/dp_10"
        android:lineSpacingMultiplier="1.3"
        android:text="开启后，在23:00到7:00期间收到消息通知时，手机不会振动与发出提示音"
        />

</LinearLayout>