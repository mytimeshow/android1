<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        style="@style/title_title">

        <ImageView
            style="@style/title_back"/>

        <TextView
            style="@style/title_text"
            android:text="成为推广员"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:background="@color/main_red">

        <cn.czyugang.tcg.client.utils.img.ImgView
            android:id="@+id/promote_become_head"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            app:round="true"
            />

        <TextView
            android:id="@+id/promote_become_name"
            style="@style/text_18_white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_110"
            android:text="用户名称"
            />

        <TextView
            android:id="@+id/promote_become_task"
            style="@style/text_14_white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_136"
            android:text="请完成以下认证任务后提交申请喔~"/>
    </FrameLayout>
<!--基本信息-->
    <LinearLayout
        android:id="@+id/promote_become_basedata"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                style="@style/text_14_black"
                android:text="基本信息"/>

            <TextView
                style="@style/text_12_gray"
                android:layout_marginTop="@dimen/dp_2"
                android:text="耗时约2分钟"/>

        </LinearLayout>

        <include layout="@layout/space_h"/>

        <TextView
            android:id="@+id/promote_become_basedata_status"
            style="@style/text_14_gray"
            android:text="未完成"/>

        <ImageView
            style="@style/arrow_right"/>
    </LinearLayout>
    <!--实名认证-->
    <LinearLayout
        android:id="@+id/promote_become_auth"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_0.5"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                style="@style/text_14_black"
                android:text="实名认证"/>

            <TextView
                style="@style/text_12_gray"
                android:layout_marginTop="@dimen/dp_2"
                android:text="耗时约3分钟"/>

        </LinearLayout>

        <include layout="@layout/space_h"/>

        <TextView
            android:id="@+id/promote_become_auth_status"
            style="@style/text_14_gray"
            android:text="未完成"/>

        <ImageView
            style="@style/arrow_right"/>
    </LinearLayout>
    <!--录入银行卡信息-->
    <LinearLayout
        android:id="@+id/promote_become_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_0.5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                style="@style/text_14_black"
                android:text="录入银行卡信息"/>

            <TextView
                style="@style/text_12_gray"
                android:layout_marginTop="@dimen/dp_2"
                android:text="耗时约3分钟"/>

        </LinearLayout>

        <include layout="@layout/space_h"/>

        <TextView
            android:id="@+id/promote_become_card_status"
            style="@style/text_14_gray"
            android:text="未完成"/>

        <ImageView
            style="@style/arrow_right"/>
    </LinearLayout>

    <include layout="@layout/space_v"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/promote_become_commit"
            style="@style/button_bottom"
            android:background="@color/main_light_red"
            android:text="提交申请"
            />
    </FrameLayout>

</LinearLayout>