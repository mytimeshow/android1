<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg"
              android:orientation="vertical">

    <FrameLayout
        style="@style/title_title">

        <ImageView
            style="@style/title_back"/>

        <TextView
            style="@style/title_text"
            android:text="退款申请"/>
    </FrameLayout>

    <include layout="@layout/view_split_bar_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_25"
            android:src="@drawable/ic_checkbox_check"/>

        <TextView
            style="@style/text_16_black"
            android:layout_marginTop="@dimen/dp_15"
            android:text="申请提交成功"
            />

        <TextView
            style="@style/text_12_gray"
            android:layout_marginTop="@dimen/dp_10"
            android:text="请耐心等待商家处理"/>

        <TextView
            android:id="@+id/refund_finish_shop"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/border_rect_red"
            android:gravity="center"
            android:text="继续逛商城"
            android:textColor="@color/main_red"
            />

        <TextView
            android:id="@+id/refund_finish_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="查看订单详情"
            android:textColor="@color/main_red"
            android:textSize="@dimen/sp_12"/>

    </LinearLayout>

</LinearLayout>