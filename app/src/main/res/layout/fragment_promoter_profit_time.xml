<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <include layout="@layout/view_split_bar_light"/>

    <TextView
        android:id="@+id/promote_profit_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_14"
        android:text="结算预估收入：￥11.00"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_12"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/promote_profit_click_num"
            style="@style/text_12_gray"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.3"
            android:paddingLeft="@dimen/dp_14"
            android:text="点击数\n15"
            />

        <View
            android:layout_width="@dimen/dp_0.5"
            android:layout_height="@dimen/dp_33"
            android:background="@color/text_gray"
            />

        <TextView
            android:id="@+id/promote_profit_register_num"
            style="@style/text_12_gray"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.3"
            android:paddingLeft="@dimen/dp_14"
            android:text="注册首单数\n15"
            />

        <View
            android:layout_width="@dimen/dp_0.5"
            android:layout_height="@dimen/dp_33"
            android:background="@color/text_gray"
            />

        <TextView
            android:id="@+id/promote_profit_pay_nums"
            style="@style/text_12_gray"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.3"
            android:paddingLeft="@dimen/dp_14"
            android:text="推广付款单数\n15"
            />


    </LinearLayout>

    <include layout="@layout/view_split_bar_light_big"/>



</LinearLayout>