<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_14"
    android:paddingBottom="@dimen/dp_14"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    >


    <cn.czyugang.tcg.client.utils.img.ImgView
        android:id="@+id/item_img"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_2"
        />
    
    <TextView
        android:id="@+id/item_name"
        style="@style/text_16_black"
        android:layout_toRightOf="@+id/item_img"
        android:layout_marginBottom="@dimen/dp_6"
        android:text="好吃美味500可海鲜零食休闲美食"/>
    
    <TextView
        android:id="@+id/item_sale"
        style="@style/text_12_dark_gray"
        android:layout_toRightOf="@id/item_img"
        android:layout_below="@id/item_name"
        android:text="已售11份 | 好评率100%"/>

    <TextView
        android:id="@+id/item_delivery"
        style="@style/text_12_dark_gray"
        android:layout_below="@id/item_name"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="30分钟 | 1.25 km"
        />
    
    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_img"
        android:layout_below="@id/item_delivery"
        android:text="￥9.99"
        android:textColor="@color/main_red"
        android:textSize="@dimen/sp_18"
        />

    <TextView
        android:id="@+id/item_platform_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/item_price"
        android:layout_alignParentRight="true"
        android:background="@drawable/border_rect_red"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:text="同城鸽专送"
        android:textColor="@color/main_light_red"
        android:textSize="@dimen/sp_10"
        />

    <cn.czyugang.tcg.client.widget.LabelLayout
        android:id="@+id/item_labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        />
    
</RelativeLayout>