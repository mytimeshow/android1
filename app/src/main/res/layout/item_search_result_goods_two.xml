<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_14"
    android:paddingTop="@dimen/dp_14">

    <cn.czyugang.tcg.client.utils.img.ImgView
        android:id="@+id/item_img"
        android:layout_width="@dimen/dp_176"
        android:layout_height="@dimen/dp_176"
        />

    <TextView
        android:id="@+id/item_name"
        style="@style/text_16_black"
        android:layout_below="@+id/item_img"
        android:layout_marginTop="@dimen/dp_8"
        android:text="好吃美味500可海鲜零食休闲美食"/>

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:layout_marginTop="@dimen/dp_8"
        android:text="￥9.99"
        android:textColor="@color/main_red"
        android:textSize="@dimen/sp_18"
        />

    <TextView
        android:id="@+id/item_sale"
        style="@style/text_12_dark_gray"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/item_price"
        android:text="已售11"/>

</RelativeLayout>