<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/view_balance_rest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_black"
        android:gravity="center"
        android:text="商户休息中  不接受订单喔"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        />

<FrameLayout
    android:layout_width="@dimen/dp_40"
    android:layout_height="@dimen/dp_40"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_16"
    >
    <ImageView
        android:id="@+id/view_balance_trolley_img"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_vertical"
        android:src="@drawable/trolley_grey"/>
    <TextView
        android:id="@+id/view_balance_num"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_gravity="right"
        android:gravity="center"
        android:text="1"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:background="@drawable/dot_red"
        android:visibility="gone"
        />
</FrameLayout>

    <TextView
        android:id="@+id/view_balance_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未选购商品哦"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_14"
        />

    <include layout="@layout/space_h"/>

    <TextView
        android:id="@+id/view_balance_commit"
        android:layout_width="@dimen/dp_120"
        android:layout_height="match_parent"
        android:background="@color/grey_350"
        android:gravity="center"
        android:text="0.01元起送"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:clickable="false"
        />

</LinearLayout>