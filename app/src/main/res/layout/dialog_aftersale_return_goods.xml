<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_20"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        >

        <TextView
            style="@style/text_14_dark_gray"
            android:text="退货方式"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/dialog_aftersale_logistics_mode"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_black"
            android:gravity="center"
            android:background="@drawable/border_rect_grey"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_10">

        <TextView
            style="@style/text_14_dark_gray"
            android:text="物流公司"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/dialog_aftersale_logistics_name"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_black"
            android:gravity="center"
            android:background="@drawable/border_rect_grey"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_10">

        <TextView
            style="@style/text_14_dark_gray"
            android:text="物流单号"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            />

<!--        <EditText
            android:id="@+id/dialog_aftersale_logistics_order"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_black"
            android:gravity="center"
            android:background="@drawable/border_rect_grey"
            />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_negative"
            style="@style/DialogButtonSmall.Negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/very_small"
            android:layout_marginTop="@dimen/medium"
            android:layout_weight="1"
            android:text="@string/btn_cancel"
            />

        <TextView
            android:id="@+id/tv_positive"
            style="@style/DialogButtonSmall.Positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/very_small"
            android:layout_marginTop="@dimen/medium"
            android:layout_weight="1"
            android:text="@string/btn_confirm"
            />
    </LinearLayout>

</LinearLayout>