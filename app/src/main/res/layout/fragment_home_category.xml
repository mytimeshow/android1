<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_category_class"
        android:layout_width="@dimen/dp_80"
        android:layout_height="match_parent"
        />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <cn.czyugang.tcg.client.utils.img.ImgView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <include layout="@layout/space_h"/>

                <View
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/main_red"/>

                <TextView
                    android:id="@+id/home_category_select_class"
                    style="@style/text_14_red"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"/>

                <View
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/main_red"/>


                <include layout="@layout/space_h"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_category_class_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>